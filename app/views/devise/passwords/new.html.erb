<div class="flex flex-col justify-center items-center w-full h-screen gap-5">
  <h2 class="text-3xl">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { "data-turbo": "false", method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full" %>
    </div>

    <div class="actions mt-5">
      <%= f.submit "Send me reset password instructions", class: "px-5 py-2.5 text-white bg-purple-700 hover:cursor-pointer hover:bg-purple-800 w-full" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

