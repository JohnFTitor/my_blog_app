<div class="user">
  <%= render 'partials/card', user: @user %> 
  <div class="bio">
    <h2> Biography </h2>
    <p> <%= @user.bio %> </p>
  </div>
  <ul>
    <% @user.recent_posts.each do |post| %>
      <li>
        <%= render 'partials/post_card', post: post %>
      </li>
    <% end %>
  </ul>
  <button> See all Posts </button>
</div>
