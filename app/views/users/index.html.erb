<div class="w-full">
  <ul class="flex flex-wrap justify-center w-full gap-5">
    <% @users.each do |user| %>
    <li class="w-full max-w-3xl">
      <%= link_to user_path(id: user.id), class:"w-full", id: "User: #{user.id}" do %>
        <%= render 'partials/card', user: user%>
      <% end %>
    </li>
    <% end %>
  </ul> 
</div>

