<% if user_signed_in? %>
  <div class="flex absolute top-0 right-0">
    <% if can? :destroy, post %>
      <%= link_to 'Delete', user_post_path(id: post.id, user_id: post.author.id), method: :delete, class: "p-5 bg-red-800 hover:bg-red-700 text-white text-xl" %>      
    <% end%>
    <%= form_with model: like, url: user_post_likes_url(post_id: post.id, user_id: post.author.id), method: 'post' do |f| %>
      <%= f.hidden_field :post, value: post.id %>
      <%= f.submit 'Like', class: "bg-sky-700 text-white text-xl p-5 hover:cursor-pointer hover:bg-sky-600" %>
    <% end %>
  </div>
<% end %>

