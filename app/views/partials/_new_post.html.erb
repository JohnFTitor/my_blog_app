<%= form_with model: post, url: user_posts_url(user_id: current_user.id),method: :post, class: "flex flex-col items-center gap-8 p-3 sm:p-10 mt-10 border-solid border-4 border-sky-500 w-full" do |f| %>
  <%= f.hidden_field :likes_counter, value: 0 %>
  <%= f.hidden_field :comments_counter, value: 0 %>
  <div class="flex flex-col gap-4 w-full">
    <%= f.label :title, class: "text-2xl" %>
    <%= f.text_field :title, class: "text-xl w-full" %>
  </div>
  <div class="flex flex-col gap-4 w-full">
    <%= f.label :text, class: "text-2xl" %>
    <%= f.text_area :text, rows: "14" , class: "text-xl w-full" %>
  </div>
  <%= f.submit 'Create Post', class: "bg-sky-700 text-white px-5 py-2.5 hover:cursor-pointer hover:bg-red-700 max-w-lg" %>
<% end %>
