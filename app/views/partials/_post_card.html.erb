<%= link_to user_post_path(user_id: user.id, id: post.id) do %>
  <div class="card-info">
    <h3> <%= post.title %> </h3>
    <p><%= truncate(post.text, :length => 150) %></p>
    <p class="placeholder stats"> Comments: <%= post.comments_counter %>, Likes: <%= post.likes_counter %> </p>
  </div>
<% end %>
