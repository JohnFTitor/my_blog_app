<div class="posts">
  <%= render 'partials/card', user: @user %>
  <ul class="cards">
    <% @posts.order(created_at: :desc).each do |post| %>
      <li class="post-comment">
        <%= render 'partials/post_card', post: post %>
        <div class="card-info">
          <%= render partial: 'partials/comment', collection: post.recent_comments %>   
        </div>
      </li>
    <% end %>
  </ul>
  <button> Pagination </button>
</div>
