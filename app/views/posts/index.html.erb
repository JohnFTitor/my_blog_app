<div class="flex flex-col gap-8 items-center w-full mt-5 pt-36">
  <% if flash[:success] %>
    <span class="px-5 py-2.5 bg-green-500 text-white text-xl"> <%= flash[:success] %> </span>
  <% end %>
  <%= render 'partials/like_flash' %>
  <%= render 'partials/card', user: @user %>
  <ul class="flex flex-col gap-8 items-center w-full">
    <% @posts.each do |post| %>
      <li class="relative flex flex-col">
        <%= render 'partials/post_card', post: post, user: @user %>
        <%= render 'partials/like', post: post, like: @like %>
        <div class="p-10 border-solid border-4 border-sky-700 flex flex-col gap-1">
          <%= render partial: 'partials/comment', collection: post.recent_comments %>   
        </div>
      </li>
    <% end %>
  </ul>
  <button> Pagination </button>
</div>
